# GENERAL
NODE_ENV=local
HOST=0.0.0.0
PORT=3000

# PASSPORT
AUTH_SECRET=your-super-secret-key-change-in-production
EXPIRE_IN=7200
REFRESH_EXPIRE_IN=604800

# DB
TYPEORM_CONNECTION=postgres
TYPEORM_HOST=localhost
TYPEORM_PORT=5432
TYPEORM_USERNAME=postgres
TYPEORM_PASSWORD=postgres
TYPEORM_DATABASE=boilerplate_db
TYPEORM_SYNCHRONIZE=false
TYPEORM_ENTITIES=dist/**/*.entity.js

# REDIS
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=60000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# THROTTLE
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# EMAIL SERVICE (Cloud Function)
EMAIL_SERVICE_URL=https://your-cloud-function-url/send-email
EMAIL_SERVICE_KEY=your-api-key

# FRONTEND
FRONTEND_URL=http://localhost:3000

# SUPABASE (Login Social + Storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_BUCKET=uploads

# FILE UPLOAD
MAX_FILE_SIZE=10485760
